<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.tenx.xservices">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:name="com.github.tenx.xservices.base.BaseApplication"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/agtech"
        android:label="AGTech Services"
        android:roundIcon="@mipmap/agtech"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.github.tenx.xservices.ui.business.funcnatilies.BusinessFunctionalityActivity" />
        <activity android:name="com.github.tenx.xservices.ui.business.main.BusinessMainActivity">



        </activity>
        <activity android:name="com.github.tenx.xservices.ui.auth.AuthenticationActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name="com.github.tenx.xservices.ui.Services.ServicesActivity" />
        <activity android:name="com.github.tenx.xservices.ui.Function.FunctionActivity" />
        <activity
            android:name="com.github.tenx.xservices.ui.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">




        </activity>

        <service
            android:name=".service.FcmService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>