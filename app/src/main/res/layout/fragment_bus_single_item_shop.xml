<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F8F5F5"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#F8F5F5"
            android:padding="8dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title"
                android:fontFamily="@font/roboto_medium"
                android:textSize="18sp"
                android:textColor="@color/text_colour"
                android:text="Product Name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_headline"
                android:textColor="#746F6F"
                android:fontFamily="@font/roboto_medium"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:text="Daam tu likha thakibo ayate"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_desceription"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="10dp"
                android:text="This is the description bdody of the thing we are here to aanouce so many things cuz everything has changed. I dont know how and why This is happeneing but this is happening????"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:id="@+id/progress_bar"
                android:layout_gravity="center"/>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:id="@+id/iv_advertisement_image"
                android:src="@color/colorPrimary"/>


            <com.google.android.material.button.MaterialButton
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:text="Buy this item"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:id="@+id/btn_buy"
                android:fontFamily="@font/roboto"
                app:cornerRadius="5dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#5084DE"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>