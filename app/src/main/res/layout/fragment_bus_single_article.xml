<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F8F5F5"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:background="#F8F5F5"
        tools:context=".ui.Function.singlearticle.SingleArticleFragment">

        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:background="#F8F5F5"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title"
                android:fontFamily="@font/roboto_medium"
                android:textSize="18sp"
                android:textColor="@color/text_colour"
                android:text="Name of the Company"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_headline"
                android:textColor="#746F6F"
                android:fontFamily="@font/roboto_medium"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:text="New pesticide in the market"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_desceription"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="10dp"
                android:text="This is the description bdody of the thing we are here to aanouce so many things cuz everything has changed. I dont know how and why This is happeneing but this is happening????"/>


            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:id="@+id/progress_bar"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:id="@+id/iv_advertisement_image"
                android:src="@color/colorPrimary"/>

        </LinearLayout>



    </ScrollView>


</LinearLayout>