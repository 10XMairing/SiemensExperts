<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_register_ll"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#ffff">

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_reg_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:paddingTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="#fafafa"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/agtech"/>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/editTextStyle"
                android:id="@+id/tv_text_input_4"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto"
                    android:layout_height="40dp"
                    android:hint="First Name"
                    android:id="@+id/first_name"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/editTextStyle"
                android:id="@+id/tv_text_input_3"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto"
                    android:layout_height="40dp"
                    android:hint="Last Name"
                    android:id="@+id/last_name"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/editTextStyle"
                android:id="@+id/tv_text_input_l"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto"
                    android:layout_height="40dp"
                    android:hint="@string/edittext_email"
                    android:textColorHint="#000"
                    android:id="@+id/email"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/editTextStyle"
                app:passwordToggleEnabled="true"
                android:id="@+id/tv_text_input_2"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto"
                    android:layout_height="40dp"
                    android:hint="@string/edittext_password"
                    android:inputType="textPassword"
                    android:id="@+id/password" />
            </com.google.android.material.textfield.TextInputLayout>




            <ProgressBar
                android:id="@+id/spin_kit"
                android:layout_marginTop="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:visibility="invisible"/>



            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button"
                app:cornerRadius="2dp"
                android:backgroundTint="#5084DE"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Register"
                android:gravity="center"
                android:fontFamily="@font/roboto"
                android:id="@+id/register"
                android:textColor="#FAFAFA"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_login_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Already a member?"
                android:textAlignment="center"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                />



            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button"
                app:cornerRadius="2dp"
                android:fontFamily="@font/roboto"
                android:backgroundTint="#962ED1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Login"
                android:gravity="center"
                android:id="@+id/login"
                android:textColor="#FAFAFA"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:layout_gravity="center"/>




        </LinearLayout>
    </ScrollView>
</LinearLayout>